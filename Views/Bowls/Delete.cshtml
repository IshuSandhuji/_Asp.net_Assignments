@model Ishu_Bowl.Models.Bowl

@{
    ViewData["Title"] = "Delete";
}

<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Lilita+One&display=swap" rel="stylesheet">

<style>
    /* Reset some default styles */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* Set a background color and font */
    body {
        background-color: #1F4172; /* Use the specified background color */
        font-family: 'Lilita One', cursive;
        color: #333;
    }

    /* Header styles */
    header {
        background-color: #007ACC;
        color: #fff;
        padding: 20px;
        text-align: center;
        border-bottom: 5px solid #00579C;
    }

        header h1 {
            font-size: 3rem;
            letter-spacing: 2px;
        }

    /* Content container styles */
    .container {
        max-width: 960px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        border-radius: 10px;
    }

    /* Heading styles */
    h2 {
        font-size: 2rem;
        color: #333;
        margin-top: 20px;
        border-bottom: 2px solid #007ACC;
        padding-bottom: 10px;
    }

    h3 {
        font-size: 1.5rem;
        color: #555;
    }

    /* Paragraph styles */
    p {
        line-height: 1.6;
        margin-bottom: 20px;
    }

    /* Image styles */
    img {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 20px 0;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    /* Contact and address styles */
    .address {
        background-color: #007ACC;
        color: #fff;
        padding: 20px;
        text-align: center;
    }

    /* Footer styles */
    footer {
        background-color: #333;
        color: #fff;
        text-align: center;
        padding: 10px;
        font-size: 0.9rem;
    }
</style>



